{
  "name": "ibsheet-vue-component",
  "private": true,
  "version": "1.0.4",
  "license": "MIT",
  "type": "module",
  "main": "./dist/ibsheet-vue/ibsheet-vue.umd.js",
  "module": "./dist/ibsheet-vue/ibsheet-vue.es.js",
  "types": "./dist/ibsheet-vue/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ibsheet-vue/ibsheet-vue.es.js",
      "require": "./dist/ibsheet-vue/ibsheet-vue.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && yarn copy-package && yarn build:types",
    "copy-package": "node scripts/copy-package.cjs",
    "build:types": "vue-tsc src/components/index.ts --declaration --emitDeclarationOnly --outDir dist/ibsheet-vue/types",
    "postbuild": "shx cp src/README.md LICENSE CHANGELOG.md dist/ibsheet-vue/",
    "preview": "vite preview",
    "release": "standard-version",
    "lint": "eslint --ext .js,.ts,.vue src",
    "lint:test": "eslint \"**/*.{js,ts,vue}\" && prettier \"**/*.{ts,js,vue,json,css,scss,md}\" --list-different",
    "fix:eslint": "eslint \"**/*.{js,ts,vue}\" --fix",
    "fix:prettier": "prettier \"**/*.{ts,js,vue,json,css,scss,md}\" --write --list-different",
    "format": "prettier --write \"src/**/*.{ts,js,vue,json,css,scss,md}\"",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:publish": "yarn release && cd dist/ibsheet-vue && npm publish --access public"
  },
  "dependencies": {
    "@ibsheet/interface": "latest",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/utils": "^8.39.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/runtime-core": "^3.5.18",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "standard-version": "^9.5.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.12"
  }
}
